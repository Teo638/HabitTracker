<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp">

            <!-- Title -->
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cbDone"
                app:layout_constraintTop_toTopOf="parent"/>


            <CheckBox
                android:id="@+id/cbDone"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:contentDescription="Check-in"
                android:src="@android:drawable/checkbox_off_background"
                app:tint="#34C759"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <LinearLayout
                android:id="@+id/layoutStreak"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/txtTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/imgFire"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@android:drawable/btn_star_big_on"
                    app:tint="#FFA500"
                    android:contentDescription="Streak"/>

                <TextView
                    android:id="@+id/txtStreak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Streak: 0"
                    android:textColor="#FFA500"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Week circles -->
            <LinearLayout
                android:id="@+id/layoutWeek"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/layoutStreak"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/dayMon"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:gravity="center"
                    android:text="M"
                    android:textColor="#AAAAAA"
                    android:background="@drawable/bg_circle_day"/>

                <TextView
                    android:id="@+id/dayTue"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="T"
                    android:textColor="#AAAAAA"
                    android:background="@drawable/bg_circle_day"/>

                <TextView
                    android:id="@+id/dayWed"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="W"
                    android:textColor="#AAAAAA"
                    android:background="@drawable/bg_circle_day"/>

                <TextView
                    android:id="@+id/dayThu"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="T"
                    android:textColor="#AAAAAA"
                    android:background="@drawable/bg_circle_day"/>

                <TextView
                    android:id="@+id/dayFri"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="F"
                    android:textColor="#AAAAAA"
                    android:background="@drawable/bg_circle_day"/>

                <TextView
                    android:id="@+id/daySat"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="S"
                    android:textColor="#AAAAAA"
                    android:background="@drawable/bg_circle_day"/>

                <TextView
                    android:id="@+id/daySun"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="S"
                    android:textColor="#AAAAAA"
                    android:background="@drawable/bg_circle_day"/>
            </LinearLayout>

            <!-- Delete icon (bottom-right) -->
            <ImageView
                android:id="@+id/imgDelete"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="10dp"
                android:src="@android:drawable/ic_menu_delete"
                android:contentDescription="ObriÅ¡i"
                app:tint="#666666"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutWeek"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
