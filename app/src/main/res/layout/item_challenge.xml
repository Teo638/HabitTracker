<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingVertical="12dp"
    android:background="@color/soft_white">
    <ImageView
    android:id="@+id/imgChallengeIcon"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:contentDescription="Challenge icon"
    android:src="@drawable/ic_challenges"
    app:tint="@color/primary_orange"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvChallengeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:text="Naziv izazova:"
        android:textColor="@color/primary_orange"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/imgSend"
        app:layout_constraintStart_toEndOf="@id/imgChallengeIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvChallengeDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="2"
        android:text="Opis izazova:"
        android:textColor="#64748B"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/tvChallengeTitle"
        app:layout_constraintStart_toStartOf="@id/tvChallengeTitle"
        app:layout_constraintTop_toBottomOf="@id/tvChallengeTitle" />

    <ImageView
        android:id="@+id/imgSend"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:contentDescription="Send"
        android:rotation="-45"
        android:src="@android:drawable/ic_menu_send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#94A3B8" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#EEEEEE"
        app:layout_constraintTop_toBottomOf="@id/tvChallengeDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>